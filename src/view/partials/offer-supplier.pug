include datafake.pug
.wrapper-offer-supplier
    .offer-supplier_header.p-3
        .offer-content-space-owner
            .offer-content-space-owner_info-avatar
                a(href="#")
                    img(src="https://st.hzcdn.com/simgs/ee53d18f01071ab1_1-0081/_.jpg")
            .offer-content-space-owner_info-details.ml-3
                .space-owner_info-details_name
                    a(href="#" style="font-weight:600") Trung Hiếu
                .space-owner_info-details_info
                    a(href="#" style="font-weight:600") Cập nhật thông tin

    .offer-supplier_header-title.d-flex.text-center.px-3.py-2
        <i class="fas fa-th-list"></i>
        h2.ml-2 Danh sách nhà cung cấp
    .offer-supplier_list-content
        each item in listOfferSupplierItem
            .offer_list_item.px-3.py-2
                .box-list_info
                    .list_item_img
                        img(src=item.imgInfo)
                    .list_item_info
                        .item_info(name="name")
                            p Tên sản phẩm:
                            span=item.name
                        .item_info(name="price")
                            p Giá :
                            span=item.price
                                sup đ
                        .item_info
                            a.supplier_logo(href="./store-homepage.html")
                                img(src=item.logo)
                .widget-see-details.text-right
                    button.btn-see-details Xem chi tiết
                    .details-supplier.text-left
                        .details-supplier_title.p-3
                            a.supplier_logo(href="./store-homepage.html")
                                    img(src=item.logo)
                            h2=item.nameSupplier
                        .details-supplier-content.px-3.py-2
                            .item_info
                                p Tên sản phẩm:
                                span.ml-1=item.name
                            .item_info
                                p Giá:
                                span.ml-1=item.price
                            .item_info
                                p Số lượng đặt tối thiểu:
                                span.ml-1=item.minQuantity
                            .item_info
                                p Thời gian giao hàng:
                                span.ml-1
                            .item_info
                                p DH:
                                span.ml-1
                            .item_info
                                p Mô tả chi tiết:
                                span.ml-1
                        button.btn-close-details-supplier ĐÓNG
                            