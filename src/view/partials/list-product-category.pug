mixin productItem
    .product-item.my-3
        .product-item-header
            .product-item-badges
                span.discount -20%
                span.status.unlike.cursor-pointer
                    i.fas.fa-heart
            a(href="./product-detail.html").product-item-image
                img(src="https://cdn.fitin.vn/cms-ecom/thumbs/700x700/images/2019/11/01/vivacph-coffeetable-ohw-0000-1572591277.jpg", alt="Product Image")     
        .product-item-body.mt-1
            .product-item-slider.owl-carousel.owl-carousel-2
                .thumbnail-item.active
                    img(src="https://cdn.fitin.vn/cms-ecom/thumbs/700x700/images/2019/11/01/vivacph-coffeetable-ohw-0000-1572591277.jpg", alt="Product Image")
                .thumbnail-item
                    img(src="https://cdn.fitin.vn/cms-ecom/thumbs/700x700/images/2019/11/01/vivacph-coffeetable-ohw-0008-1572591279.jpg", alt="Product Image")
                .thumbnail-item
                    img(src="https://cdn.fitin.vn/cms-ecom/thumbs/700x700/images/2019/11/01/vivacph-coffeetable-ohw-0013-1572591280.jpg", alt="Product Image")
                .thumbnail-item
                    img(src="https://cdn.fitin.vn/cms-ecom/thumbs/700x700/images/2019/11/01/vivacph-coffeetable-ohw-0024-1572591282.jpg", alt="Product Image")
            .product-item-info.px-3.pb-3.pt-2
                a(href="#").cursor-pointer
                    h3.product-info-title Ghế thư giãn Barcelona
                .d-flex.justify-content-between.align-items-center.pt-3
                    .product-stars-rating
                        span.active
                            i.fas.fa-star
                        span.active
                            i.fas.fa-star
                        span.active
                            i.fas.fa-star
                        span
                            i.fas.fa-star
                        span
                            i.fas.fa-star
                        span.count-rating (30)
                    .product-location Hồ Chí Minh    
        .product-item-footer.d-flex.justify-content-between.align-items-center.px-3.py-1
            .product-price
                p.m-0.current-price 23,699,333 VND
                p.m-0.old-price 40,340,999 VND
            .product-provider
                a(href="./store-homepage.html")
                    img(src="https://cdn.fitin.vn/cms-ecom/images/2019/11/01/dong-nhan-1572594837.png", alt="")
